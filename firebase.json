{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "cp -R src functions",
      "yarn --cwd $PWD/functions install",
      "yarn --cwd $PWD/functions/src build"
    ]
  },
  "hosting": {
    "public": "functions/src/public",
    "rewrites": [
      {"source": "/", "function": "app"}
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
